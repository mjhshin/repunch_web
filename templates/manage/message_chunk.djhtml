{% load parse_tags %}{% load text_tags %}

{% for message in messages %}
<div class="tr {% cycle '' 'odd' %}">
	<a href="{% url 'message_details' message.objectId %}">
		<div class="td date">{{ message|get:'createdAt'|date:"m/d/y" }}</div>
		<div class="td subject">{{ message|get:'subject'|trim_to_dots:40 }}</div>
	</a>
</div>
{% empty %}
<div class="tr">
	<div class="td date">No Messages</div>
	<div class="td subject">&nbsp;</div>
</div>
{% endfor %}
