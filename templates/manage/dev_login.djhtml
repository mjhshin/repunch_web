{% load static %}<!DOCTYPE html>
<html>
<head>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8">
	<title>Repunch Engineer | Login</title>
	
    <link href='http://fonts.googleapis.com/css?family=Cabin:400,600,700' 
        rel='stylesheet' type='text/css'>
	
	<link href="{% static 'manage/css/global.1.5.css' %}" rel="stylesheet" />
	<link href="{% static 'manage/css/login.2.0.css' %}" rel="stylesheet" />   
	
	<style>
	div#header { 
	    margin-top: 20px; width:330px;
	    margin-left:auto; margin-right:auto;
	}
    div#content-frame { width: 300px; }
    div#site-frame { width: 330px; }
    div#main-content { 
        min-height:0px;
        padding-top:0px; padding-bottom:0px;  
        width:310px; height: 0px;
        margin-bottom:0px;margin-left:auto; margin-right:auto; 
    }
    div#header-left span { 
        opacity:0; 
        position:relative; left:50px; 
        font: bold italic 0.8em 'Cabin', sans-serif; 
        color:#0965ad 
    }
    input { width: 286px; }
    input[type=submit]{ 
        opacity: 0;
        font: bold 14px 'Cabin', sans-serif;
        position:relative; left: 151px; 
        width: 0px; color: #4c8ffb; 
        margin-top:10px; 
        background-color: #4c8ffb; 
    }
    input[type=submit]:hover{ background-color: #427edd; }
    form div { 
        width: 302px; color: red; 
        font-size:0.8em; 
        text-align:center; 
        margin-top:10px; 
    }
    form { opacity:0; }
	</style>
	
	<script src="{% static 'manage/js/jquery/jquery-1.9.1.min.js' %}"></script>
    <script src="{% static 'manage/js/jquery/jquery-ui.min.js' %}"></script>
	<script>
	$(document).ready(function() {
	    setTimeout(function() {
	        $("#main-content").animate({"min-height": 180,
	            "padding-top": 25, "padding-bottom":75}, 500, function() {
	                $("form").animate({"opacity": 1}, 500);
	                $("div#header-left span").animate({"opacity": 1}, 500,
	                    function() {
	                        $("input[type=submit]").animate({width: 302,
	                            left:0, color: "#fff", opacity:1}, 700);
	                    });
	            });
	        
	    }, 300);
	    
	    $("input[type=submit]").click(function() {
	        var data = $("form").serialize();
	        $.post("{% url 'manage_dev_login' %}", data, function(res) {
	            if (res.code == 0) {
	                $("form div").text("Wrong username or password =P");
	                $("#password").val("").focus();
	            } else {
	                window.location.replace("{% url 'public_home' %}");
	            }
	        });
	        
	        return false;
	    });
	    
	});
	</script>
	
</head>
<body>
	<div id="site-frame">
		<div id="header">
			<div id="header-left">
			    <a href="{% url 'public_home' %}">
				<img src="{% static "manage/images/logo_header.png" %}" alt="Repunch" id="logo-header" />&nbsp;
				<span>ENGINEER LOGIN</span>
				</a>
			</div>
		</div>
		<div id="content-frame">
			<div id="main-content">
				
				<form action="">
                    {% csrf_token %}

	                <p><label for="username">Username:</label> 
	                <input type="text" name="username" id="username" value="{{ username }}"></p>
	
	                <p><label for="password">Password:</label> 
	                <input type="password" name="password" id="password" ></p>
	
	                <input type="submit" value="Sign in" />
	                
	                <div></div>
	                
                </form>
				
			</div><!-- close main-content -->
			<div class="clear">&nbsp;</div>
		</div><!-- close content-frame -->
	</div><!-- close site-frame -->
	<div id="footer">
		<img src="{% static "manage/images/logo_footer.png" %}" alt="Repunch" id="logo-footer" />
	</div>
</body>
</html>
